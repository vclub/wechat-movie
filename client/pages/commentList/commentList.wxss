/* pages/commentList/commentList.wxss */
.container {
  padding-top: 40rpx;
}

.comment-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  background-color: white;
  border-bottom: 6rpx solid #EEEEEF;
}

.comment-container:first-of-type {
  border-top: 6rpx solid #EEEEEF;
}

.comment-container .comment-header {
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  font-size: .8em;
}

.comment-header image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-container .comment-body {
  padding: 30rpx 50rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: block; 
}

.audio {
  max-width: 100rpx;
  margin-left: 80rpx;
  margin-top: 20rpx;
  padding: 6rpx 60rpx;
  font-size: .8em;
  background-color: #D9E2E8;
  text-align: center;
  border: 1rpx solid #B5C5CD;
}